<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?homeCardStyle"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <moe.shizuku.manager.widget.MaterialCircleIconView
        android:id="@android:id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_learn_more_24dp"
        app:iconColorName="blue_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:duplicateParentState="true"
        android:orientation="vertical">

        <rikka.html.widget.HtmlCompatTextView
            android:id="@android:id/text1"
            style="@style/CardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            app:htmlText="@string/home_learn_more_title" />

        <rikka.html.widget.HtmlCompatTextView
            android:id="@android:id/text2"
            style="@style/CardSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            app:htmlText="@string/home_learn_more_description" />

    </LinearLayout>

</LinearLayout>